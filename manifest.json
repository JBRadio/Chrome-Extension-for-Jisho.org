{
    "author": "James Burns",
    
    "manifest_version": 2,

    "name": "Jisho.org Chrome Extension",
    "description": "Quick access to Jisho.org",
    "version": "1.0",
    
    //"default_locale": "en",
    "icons": {
        "16" : "/pictures/icon16.png",
        "19" : "/pictures/icon.png",
        "128" : "/pictures/icon128.png"
    },
    
    "browser_action": {
        "default_title": "Jisho.org Extension",
        "default_icon": "/pictures/icon.png",
        "default_popup": "popup.html"
    },
    
    "background": {
    "persistent": false,
    "scripts": ["/js/background.js"]
    },
    
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/js/content_script.js"],
      "all_frames": true,
      "run_at": "document_start"
    }
  ],
    
    "permissions": [
        "<all_urls>",
        "http://*/*",
        "https://*/*",
        "tabs",
        "contextMenus",
        "storage"
    ],
    
    "web_accessible_resources": ["/css/darkRedTheme.css"]
}
